#Simple Calculator Program
#Ahmed Abualsaud - 1107284
#EE463 - Lab# 1
#####################################
clear
echo "Program to perform simple calculation"
echo -n "Enter your numbers (sparate by space)? "
read -a aa
let "result = 0"
echo "Write (add, sub, mul, div)"
read op
for aa in "${aa[@]}" 
do
	case $op in
	add) let "result = result + aa";;
	sub) let "result = result - aa";;
	mul) let "result = result * aa";;
	div) let "result = result / aa";;
	esac
done
echo "The result = "$result
